<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a75213.myapplication">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Main.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--程序入口-->
        <activity
            android:name="com.example.a75213.myapplication.Main.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--生命周期-->
        <activity
            android:name="com.example.a75213.myapplication.chapter01.activity_lift.OneLiftActivity"
            android:configChanges="orientation|locale|keyboardHidden|screenSize" />
        <activity android:name="com.example.a75213.myapplication.chapter01.activity_lift.TwoLiftActivity" />
        <!--启动模式-->
        <activity
            android:name="com.example.a75213.myapplication.chapter01.activity_launch_model.LaunchModelActivity"
            android:launchMode="singleTask" />
        <!--进程通信-->
        <activity
            android:name="com.example.a75213.myapplication.chapter02.ipc.IPCActivity"
            android:process="com.test.process"
            ></activity>
        <!--进程通信测试-->
        <activity android:name=".chapter02.TestIPCActivity"/>
    </application>

</manifest>